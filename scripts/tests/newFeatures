#   02 Oct 2012 - Brian Patrick Marshall,,,
#      Initial Version.
#==========================================================================
x=${1:-$(read -p "Enter a value: "; echo $REPLY)}

#--------------------------------------------------------------------------
# Lower case first char
#--------------------------------------------------------------------------
echo ${x,}
#--------------------------------------------------------------------------
# Lower case all chars
#--------------------------------------------------------------------------
echo ${x,,}
#--------------------------------------------------------------------------
# Upper case first char
#--------------------------------------------------------------------------
echo ${x^}
#--------------------------------------------------------------------------
# Upper case all chars
#--------------------------------------------------------------------------
echo ${x^^}

#--------------------------------------------------------------------------
# Associative Arrays 
#--------------------------------------------------------------------------
declare -A dict
dict=([one]=uno [two]='due' [three]="tre")
echo ${dic[one]}
echo ${dic[two]}
echo ${dic[three]}

a[one]='uno'
a[two]='due'
a[three]='tre'

echo ${a[one]}

