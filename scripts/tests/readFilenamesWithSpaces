#! /bin/bash
# @(#) 
#==========================================================================
# File            : readFilenamesWithSpaces
# Description     : 
#
# Revision History: 
#
#   02 Oct 2012 - Brian Patrick Marshall,,,
#      Initial Version.
#==========================================================================
files=()
#--------------------------------------------------------------------------
# -d $'\0' means read up until the NUL byte ('\0'), not just until '\n'
# -r means don't treat the backslash specially
#--------------------------------------------------------------------------
while read -r -d $'\0'
do
   #-----------------------------------------------------------------------
   # += appends to the list
   #-----------------------------------------------------------------------
   files+=("$REPLY")
   #-----------------------------------------------------------------------
   # < <(..) is File Redirection (<) plus Process Substitution (<(...))
   #-----------------------------------------------------------------------
done < <(find . -print0)
